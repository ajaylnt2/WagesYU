
@{
    ViewBag.Title = "AlarmEnabling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Shared/AlarmEnabling/alarmEnabling.js"></script>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">
                            Alarm Settings
                        </a>
                    </h4>
                </div>
                <div class="panel-body">
                    <table class="table" id="idAlarmTable" data-page-size="5" data-search="true" data-page-list="[5, 10, 25, 50, 100, ALL]" data-mobile-responsive="true"></table>
                    <div class="col-xs-3">
                        <input type="button" name="Save Details" value="Save Details" id="idSaveAlarmSettings" class="btn btn-success" onclick="saveDetails()" />
                    </div>
                </div>
            </div>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion">
                            Email Id's
                        </a>
                    </h4>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="Email" class="col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS">Email</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="idEmail">
                        </div>
                        <div class="col-sm-3 col-lg-4 col-xs-4 col-md-4 yearTextField">
                            <input type="button" name="Get Details" value="Save Details" id="idSaveEmail" class="btn btn-success" onclick="saveEmail()" />
                        </div>
                    </div>
                    <table class="table" id="idEmailTable" data-page-size="5" data-search="true" data-page-list="[5, 10, 25, 50, 100, ALL]" data-mobile-responsive="true"></table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#idAlarmTable").bootstrapTable({
        pagination: 'true',
        columns: [
                    { field: 'TagName', title: 'Tag Name', sortable: true, align: 'center' },
                    { field: 'AssetName', title: 'Asset Name', sortable: true, align: 'center' },
                    {
                        field: 'isEnabled', title: 'Is Enable', sortable: true, align: 'center', editable:  {
                            type: 'select',
                            source: [{
                                value: 'NO',
                                text: 'NO'
                            }, {
                                value: 'YES',
                                text: 'YES'
                            }]
                        }
                    },
                    { field: 'Target', title: 'Target', sortable: true, align: 'center', editable: true }
        ]
    });
    $("#idEmailTable").bootstrapTable({
        pagination: 'true',
        columns: [
                    { field: 'ID', title: 'Id', sortable: true, align: 'center' },
                    { field: 'Name', title: 'Email', sortable: true, align: 'left' },
                    { field: 'action', title: 'Action', align: 'center', formatter: ActionFormatter, events: 'actionEvents' }
        ]
    });
    loadGrid();
    getUsers();
</script>

