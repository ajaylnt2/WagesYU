
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Shared/Configuratiuon/configuration.js"></script>
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <div class="panel-group" id="accordion">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#consumptionCollapseMenu">
                                Unit Of Measurement
                            </a>
                        </h4>
                    </div>
                    <div id="wagesCollapseMenu" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#wagesUOM">UOM Mapping</a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="wagesUOM" class="tab-pane fade in active">
                                    <br />
                                    <div class="panel panel-primary">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <label for="energyName" class="col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS">WAGES Name</label>
                                                <div class="col-sm-4 ">
                                                    <input type="text" name="energyName" class="form-control" id="idEnergyType">
                                                </div>
                                                @Html.Label("wageType", "WAGES Type", htmlAttributes: new { @class = "col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS" })
                                                <div class="col-sm-4 ">
                                                @Html.DropDownList("WageList", ViewBag.WageList as SelectList, "Select Wages", new { id = "wageType", @class = "form-control" })
                                                </div>
                                            </div>  <br /><br />
                                            <div class="form-group">
                                                @Html.Label("UOM", "UOM", htmlAttributes: new { @class = "col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS" })
                                                @*<label for="uom" class="col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS">UOM</label>*@
                                                <div class="col-sm-4 ">
                                                    @Html.DropDownList("UOMList", ViewBag.UOMList as SelectList, "Select UOM", new { id = "UOM", @class = "form-control" })
                                                </div>
                                                <div class="col-sm-3 col-lg-4 col-xs-4 col-md-4 yearTextField">
                                                    <input type="button" name="Save Details" value="Save Details" id="idSaveEnergyDetails" class="btn btn-success" onclick="saveEnergy()" />
                                                </div><br /><br />
                                                <table class="table" id="idWagesTable" data-page-size="5" data-search="true" data-page-list="[5, 10, 25, 50, 100, ALL]" data-mobile-responsive="true"></table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="panel panel-primary">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                @Html.Label("Production", "Production", htmlAttributes: new { @class = "col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS" })
                                                <div class="col-sm-2">
                                                    @Html.DropDownList("ProductionUOMList", ViewBag.UOMList as SelectList, "Select UOM", new { id = "ProductionUOM", @class = "form-control"})
                                                </div>
                                                @Html.Label("SolidWaste", "Solid Waste", htmlAttributes: new { @class = "col-sm-1 col-xs-2  col-lg-2  col-md-2 control-label inlineCSS" })
                                                <div class="col-sm-2 ">
                                                    @Html.DropDownList("SolidWasteUOMList", ViewBag.UOMList as SelectList, "Select UOM", new { id = "SolidWasteUOM", @class = "form-control"})
                                                </div>
                                                <div class="col-sm-3 col-lg-4 col-xs-4 col-md-4 yearTextField">
                                                    <input type="button" class="btn btn-success" value="Save Details" onclick="saveProdUOM()" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#idWagesTable').bootstrapTable({
        //data: wagesJSON,
        pagination: 'true',
        columns: [
                    { field: 'EnergyName', title: 'WAGES Name', align: 'left' },
                    { field: 'EnergyType', title: 'WAGES Type', align: 'left' },
                    { field: 'EnergyTypeID', title: 'Energy Type ID', align: 'left' },
                    { field: 'UOM', title: 'UOM', align: 'left' },
                    { field: 'UOMID', title: 'UOM ID', align: 'left' },
                    { field: 'edit', title: 'Action', align: 'center', formatter: actionFormatter, events: 'actionEvents' }
        ]
    });
    $('#idWagesTable').bootstrapTable("hideColumn", "EnergyTypeID");
    $('#idWagesTable').bootstrapTable("hideColumn", "UOMID");
    loadGrid();
    loadUOMS();
</script>
