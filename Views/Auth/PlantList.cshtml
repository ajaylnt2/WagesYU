<body class="bg-black">
    <div class="form-box" id="login-box">
        <div class="header">Plant List</div>
            <div class="body bg-gray">
                <div class="form-group">
                    <label for="year" class="col-sm-4 control-label">Plant: </label>
                    <div class="col-sm-8 ">
                        <select class="form-control dummy" name="currencySelect" id="currencySelect">
                            <option value="0">Select Plant</option>
                        </select>
                    </div> <br />
                </div>
            </div>

            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block" onclick="redirectToPlant()">Take me in</button>
            </div>
        @Html.Hidden("RedirectTo", Url.Action("HomePage", "HomePage"))
     </div>
    <script>
        loadPlants();
    </script>
</body>
</html>
